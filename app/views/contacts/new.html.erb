<div class="new-contact">
  <div class="hero-text">
    <h1>Get Started!</h1>
    <p>Upload your list of contacts below so you can start managing your contacts today:</p>
    <%= form_tag("/contacts/load", :multipart => true) do %>
      <p>
        <%= file_field_tag :file %>
      </p>
        <%= submit_tag 'Upload', :class => "btn btn-primary", disabled: true %>
    <% end %>
  </div>
</div>
